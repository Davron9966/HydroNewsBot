import requests
import datetime
import schedule
import time
import os
import threading
from flask import Flask

BOT_TOKEN = '7966275365:AAHiOhxT_IeUnchvhwbi8eOjWGeNN_YaT9s'
CHAT_ID = '1611202'
NEWS_API_KEY = '38d9b194b2a14ca6add41d603d8cd50d'  # –≤–∞—à NewsAPI –∫–ª—é—á

app = Flask(__name__)

@app.route('/')
def home():
    return "HydroNewsBot is running!"

def fetch_ipo_news():
    query = "IPO OR Stripe OR Databricks OR Discord OR Figma"
    url = (
        f"https://newsapi.org/v2/everything?"
        f"q={query}&language=en&pageSize=4&sortBy=publishedAt&apiKey={NEWS_API_KEY}"
    )

    response = requests.get(url)
    if response.status_code != 200:
        return ["‚ö†Ô∏è –ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–ª—É—á–∏—Ç—å IPO-–Ω–æ–≤–æ—Å—Ç–∏."]
    
    articles = response.json().get("articles", [])
    news_list = []
    for article in articles:
        title = article.get("title")
        source = article.get("source", {}).get("name", "")
        link = article.get("url", "")
        news_list.append(f"üìå {title} ({source})\n{link}")
    return news_list

def get_news():
    # –í–æ–¥–æ—Ä–æ–¥–Ω—ã–µ –Ω–æ–≤–æ—Å—Ç–∏ (—Ä—É—á–Ω—ã–µ)
    hydro_news = [
        "üîã Plug Power: –∞–∫—Ü–∏–∏ –≤—ã—Ä–æ—Å–ª–∏ –Ω–∞ 3.4% –ø–æ—Å–ª–µ –Ω–æ–≤–æ—Å—Ç–∏ –æ –∫–æ–Ω—Ç—Ä–∞–∫—Ç–µ —Å Amazon",
        "üåç –ì–µ—Ä–º–∞–Ω–∏—è –∑–∞–ø—É—Å—Ç–∏–ª–∞ –∫—Ä—É–ø–Ω–µ–π—à–∏–π –≤ –ï–≤—Ä–æ–ø–µ –≤–æ–¥–æ—Ä–æ–¥–Ω—ã–π –ø–æ–µ–∑–¥",
        "‚öôÔ∏è Siemens –≤–ª–æ–∂–∏—Ç $200M –≤ –ø—Ä–æ–∏–∑–≤–æ–¥—Å—Ç–≤–æ H‚ÇÇ-—Ç—É—Ä–±–∏–Ω"
    ]

    # IPO-–Ω–æ–≤–æ—Å—Ç–∏ (–∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–µ)
    ipo_news = fetch_ipo_news()

    # –§–æ—Ä–º–∏—Ä–æ–≤–∞–Ω–∏–µ —Ç–µ–∫—Å—Ç–∞
    today = datetime.datetime.now().strftime("%d.%m.%Y")
    text = f"üì∞ –ù–æ–≤–æ—Å—Ç–∏ –Ω–∞ {today}\n\n"
    text += "üíß –í–æ–¥–æ—Ä–æ–¥ –∏ Plug Power:\n" + "\n".join(hydro_news) + "\n\n"
    text += "üöÄ IPO –∏ Tech/Fintech:\n" + "\n\n".join(ipo_news)

    # –û—Ç–ø—Ä–∞–≤–∫–∞ –≤ Telegram
    url = f"https://api.telegram.org/bot{BOT_TOKEN}/sendMessage"
    data = {"chat_id": CHAT_ID, "text": text}
    response = requests.post(url, data=data)
    print(response.status_code, response.text)

# –ü–ª–∞–Ω–∏—Ä–æ–≤—â–∏–∫ –≤ –æ—Ç–¥–µ–ª—å–Ω–æ–º –ø–æ—Ç–æ–∫–µ
def run_scheduler():
    schedule.every().day.at("08:35").do(get_news)  # 09:30 Tashkent (UTC+5)
    while True:
        schedule.run_pending()
        time.sleep(30)

if __name__ == '__main__':
    threading.Thread(target=run_scheduler).start()
    port = int(os.environ.get('PORT', 10000))
    app.run(host='0.0.0.0', port=port)
